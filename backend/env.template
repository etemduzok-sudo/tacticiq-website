# Fan Manager 2026 - Backend Environment Variables Template
# Copy this file to .env and fill in your values

# ======================
# SERVER CONFIGURATION
# ======================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ======================
# SECURITY
# ======================
# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# API Keys (comma-separated for multiple keys)
VALID_API_KEYS=key1,key2,key3

# ======================
# CORS CONFIGURATION
# ======================
FRONTEND_URL=http://localhost:8081
PRODUCTION_URL=https://fanmanager2026.com

# ======================
# EXTERNAL API
# ======================
# API-Football.com
FOOTBALL_API_KEY=your-api-football-key-here

# ======================
# SUPABASE (Database)
# ======================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ======================
# DATABASE (Optional)
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fan_manager
DB_USER=postgres
DB_PASSWORD=your-db-password

# ======================
# REDIS (Optional)
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ======================
# EMAIL SERVICE (Required for monitoring)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=info@fanmanager.com
SMTP_PASS=your-app-password
EMAIL_FROM=info@fanmanager.com
ADMIN_EMAIL=etemduzok@gmail.com

# ======================
# FIREBASE (Optional)
# ======================
FIREBASE_PROJECT_ID=fan-manager-2026
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@fan-manager-2026.iam.gserviceaccount.com

# ======================
# MONITORING (Optional)
# ======================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# CACHE CONFIGURATION
# ======================
CACHE_TTL_LIVE=60
CACHE_TTL_MATCHES=1800
CACHE_TTL_TEAMS=86400

# ======================
# FEATURE FLAGS
# ======================
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
